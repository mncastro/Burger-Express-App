  
  <h1 id="title">EAT-Da-Burger!</h1>

  <img src="https://drive.google.com/thumbnail?id=1PaMuWQDxtSUSkzOjrvHRM6jfGsGspBdO" alt="sample-burger" width="300" height="250"> 

  <div class="row">
  <h2 class="heads-left">Burgers that have not been eaten</h2>

  <ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
  </ul>

  <h2 class="heads-right">Burgers that have been devoured!</h2>

  <ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
  </ul>

  </div>

  <h2>Add a burger</h2>

  <form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name" size="80">
  </div>

  <div class="form-group">
    <label for="devoured">Devour it?</label><br>
    <input type="radio" name="devoured" value="1" checked> Yes, devour!<br>
    <input type="radio" name="devour" value="0"> No, think of your diet!
  </div>

  <button type="submit">Add Burger</button>
</form>
